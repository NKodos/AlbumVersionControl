<Window x:Class="AlbumVersionControl.View.NewCommitDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlbumVersionControl.View"
        mc:Ignorable="d"
        Title="Новая версия" Height="220" Width="500" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" FontFamily="Tahoma" FontSize="13" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock FontWeight="Bold" Margin="20,30,0,0">Введите описание изменений</TextBlock>
            <TextBox Name="txtMessage" Margin="30,5,30,10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" 
                     Height="70" Width="400" HorizontalAlignment="Left" AcceptsReturn="True" VerticalContentAlignment="Top"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,8,20,0">
                <Button Content="Создать" HorizontalAlignment="Right" Margin="10,0,8,0" Click="ButtonOk_Click"/>
                <Button Content="Отмена" HorizontalAlignment="Right" Click="ButtonCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
